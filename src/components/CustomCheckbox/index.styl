.custom-checkbox-label
  display block
  position relative
  height 18px

.custom-checkbox
  width 18px
  height 18px
  border 1px solid #ccc
  display inline-block
  border-radius 50%
  transition 0.2s
  cursor pointer

  &:hover
    background-color rgba(33, 33, 33, 10%)

  &::after
    content ''
    position absolute
    top 2px
    left 6px
    border-bottom 2px solid #fff
    border-right 2px solid #fff
    height 9px
    width 4px
    transform rotate(45deg)
    visibility hidden



.custom-input
  display none

  &:checked ~ span
    background #75cb1c

    &::after
      visibility visible

.test
  position absolute
  width 100%
  height 100%
  background-color rgba(255, 255, 255, 70%)
  left 0
  top 0
  border-radius 12px
  z-index 1
