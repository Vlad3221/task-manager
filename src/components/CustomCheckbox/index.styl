.custom-checkbox-label
  display block
  position relative
  height 18px

.custom-checkbox
  width 18px
  height 18px
  border 1px solid #9f9f9f
  display inline-block
  border-radius 50%
  transition 0.2s
  cursor pointer

  &:hover
    background-color rgba(9, 224, 9, 10%)

  &::after
    content ''
    position absolute
    top 2px
    left 6px
    border-bottom 1px solid #9f9f9f
    border-right 1px solid #9f9f9f
    height 9px
    width 4px
    transform rotate(45deg)
    transition 0.3s



.custom-input
  display none

  &:checked ~ span
    background #75cb1c

    &::after
      border-color white

.test
  position absolute
  width 100%
  height 100%
  background-color rgba(255, 255, 255, 70%)
  left 0
  top 0
  border-radius 12px
  z-index 1
