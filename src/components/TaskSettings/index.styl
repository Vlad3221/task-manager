.task-created-block
  margin auto
  bottom 0
  right -100%
  width 700px
  height 100%
  background-color white
  position fixed
  transition 2s
  padding 10px 20px 20px
  outline 1px solid #dee2e6
  z-index 5

  &__header
    text-align center
    font-weight bold

  &.open
    right 0
    border-radius 20px 0 0 20px
    transition 0.5s

.modal-settings-block
  width 100%
  margin-top 10px
  display flex
  flex-direction column
  gap 20px

  &__line
    display flex
    gap 15px

  &__title
    color #65676d
    min-width max-content

  &__input
    width 100%
    padding 0 5px
    border unset
    transition 0.3s
    outline 1px solid white
    cursor default

    &.disabled
      color #65676d

    &:focus
      outline-color gray
      cursor text

    &:not(.disabled):hover
      outline-color gray

  textarea
    resize none
    padding 5px

.button-create-task
  height 50px
  border none
  cursor pointer
  transition 0.3s

  &:hover
    opacity 0.65