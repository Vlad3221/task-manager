.task-created-block
  margin auto
  bottom 0
  right -700px
  width 700px
  height 100%
  background-color white
  position fixed
  transition 0.3s
  padding 10px 0 20px
  outline 1px solid #bfc6cb
  z-index 5

  &.open
    right 0

.task-created-block-header
  gap 5px
  width 100%
  padding 15px 20px 0
  display flex
  align-items center
  justify-content space-between

  & .status
    &__done
      display flex
      align-items center
      outline 1px solid grey
      height max-content
      border-radius 4px
      padding 3px 6px
      cursor pointer
      transition 0.3s
      font-size 14px

      & .material-symbols-outlined
        font-size 20px

      &.done
        color green
        opacity 0.3

      &:hover
        background-color #e0f4ec
        outline-color #58a182
        color #12714d

  & .navigation
    display flex
    align-items center
    gap 5px

    &__button
      width max-content
      color #333
      border-radius 4px
      font-size 16px
      cursor pointer
      display flex
      align-items center
      padding 0 5px
      transition 0.3s

      &.disabled
        opacity 0.3
        cursor not-allowed

        &:hover
          color inherit

      &:hover
        color rgba(51, 51, 51, 30%)

.content-task
  height 90%
  overflow auto

.modal-settings-block
  width 100%
  margin-top 10px
  display flex
  flex-direction column
  gap 20px
  padding 0 20px

  &.subtasks
    gap 0
    padding 0

    &__title
      margin-top 20px

  &__subtask
    padding 0 20px
    position relative
    margin-bottom -1px

    &::before
      content ''
      border-top 1px solid #c5c6c7
      width calc(100% - 40px)
      position absolute
      top 0

    &::after
      content ''
      border-bottom 1px solid #c5c6c7
      width calc(100% - 40px)
      position absolute
      bottom 0

    &:hover
      background-color rgba(197, 198, 199, 10%)

      &::after
        width 100%
        left 0

      &::before
        width 100%
        left 0

    input
    textarea
      background-color transparent !important
      outline none
      border-radius 0


  &__line
    display flex
    gap 15px

  &__title
    color #65676d
    min-width max-content
    width 100%
    max-width 200px

  &__input
    border-radius 4px
    width 100%
    padding 0 5px
    border unset
    transition 0.3s
    outline 1px solid white
    margin 0 5px

    &.title
      font-size 24px
      font-weight bold
      padding-left 0
      margin-bottom 15px
      width 100%
      word-wrap break-word
      height max-content

    &.disabled
      color #65676d

    &:focus
      outline-color #fd7b38

    &:not(.disabled):hover
      outline-color rgba(128, 128, 128, 20%)

    &:not(.disabled):hover:focus
      outline-color #fd7b38

  &__add-subtask
    color rgba(128, 128, 128, 80%)
    width max-content
    border none
    background transparent
    transition 0.3s
    padding 5px
    outline 1px solid rgba(128, 128, 128, 40%)
    border-radius 4px
    margin 20px
    display flex
    align-items center
    font-size 14px
    gap 5px

    span
      font-size 18px

    &:hover
      background-color rgba(51, 51, 51, 3%)
      color rgb(128, 128, 128)

  textarea
    resize none
    padding 0
    height 24px

.modal-settings-block-subtask
  display flex
  align-items center
  gap 10px

  &:first-child
    margin-top 10px

  &__done:checked ~ &__input
    color #afabac

  &__input
    width 100%
    border unset
    transition 0.3s
    outline 1px solid white
    margin 5px
    border-radius 4px
    font-size 14px
    color #1e1f21

    &.disabled
      color #65676d

    &:focus
    &:not(.disabled):hover:focus
      outline-color #fd7b38

  &__done:checked ~ &__input:focus
  &__done:checked ~ &__input:hover
    outline-color white

.button-create-task
  height 50px
  border none
  cursor pointer
  transition 0.3s

  &:hover
    opacity 0.65

.title-create-textarea
  padding-left 0
  height max-content !important