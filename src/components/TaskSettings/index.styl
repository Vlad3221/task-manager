.task-created-block
  margin auto
  bottom -70vh
  left calc(100vh - 400px)
  width 800px
  height 73vh
  background-color white
  position fixed
  transition 0.3s
  padding 10px 20px 20px
  outline 1px solid #dee2e6
  z-index 5

  &__header
    text-align center
    font-weight bold

  &.open
    bottom 0
    border-radius 20px 20px 0 0

.modal-settings-block
  width 100%
  margin-top 10px
  display flex
  flex-direction column
  gap 20px

  &__line
    display flex
    gap 15px

  &__title
    color #65676d
    min-width max-content

  &__input
    width 100%
    padding 0 5px
    border unset

    &.disabled
      color #65676d

    &:focus
      outline 1px solid gray

  textarea
    outline 1px solid #333
    resize none

.button-create-task
  height 50px
  border none
  cursor pointer
  transition 0.3s

  &:hover
    opacity 0.65