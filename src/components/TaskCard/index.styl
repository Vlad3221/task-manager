.tab-content-projects-slider-card-tasks-block
  width 95%
  min-height 100px
  border-radius 12px
  background-color white
  outline 1px solid rgba(128, 128, 128, 10%)
  cursor pointer
  padding 15px
  transition 0.3s
  margin 2px 2px 15px

  &:hover
    outline-color rgba(128, 128, 128, 50%)

  &.create
    display flex
    align-items center
    justify-content center
    gap 10px

    span
      text-align center
      font-weight bold
      color rgba(128, 128, 128, 50%)
      transition 0.3s

    &:hover
      span
        color rgba(128, 128, 128, 80%)

.tab-content-projects-slider-card-tasks-block-header
  display flex
  align-items center
  gap 5px
  padding-bottom 15px

  &__icon
    &.green
      color green

  &__title
    font-weight bold

.tab-content-projects-slider-card-tasks-block-description
  padding-top 5px
  display flex
  align-items center
  gap 10px
  font-size 16px

  &__context
    font-weight bold
    color #65676d

  &__value
    color black