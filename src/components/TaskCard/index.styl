.tab-content-projects-slider-card-tasks-block
  width 95%
  min-height 100px
  border-radius 12px
  background-color white
  outline 1px solid rgba(128, 128, 128, 10%)
  cursor pointer
  padding 15px
  transition 0.3s
  margin 2px 2px 15px

  &:hover
    outline-color rgba(128, 128, 128, 50%)

  &.create
    display flex
    align-items center
    justify-content center
    gap 10px

    span
      text-align center
      font-weight bold
      color rgba(128, 128, 128, 50%)
      transition 0.3s

    &:hover
      span
        color rgba(128, 128, 128, 80%)

.tab-content-projects-slider-card-tasks-block-header
  display flex
  align-items center
  gap 5px
  padding-bottom 15px

  &__icon
    &.green
      color green

  &__title
    font-weight bold

.tab-content-projects-slider-card-tasks-block-description
  padding-top 5px
  display flex
  align-items center
  gap 10px
  font-size 16px

  &__context
    font-weight bold
    color #65676d

  &__value
    color black

.task-created-block
  margin auto
  bottom -70vh
  left calc(100vh - 400px)
  width 800px
  height 73vh
  background-color white
  position fixed
  transition 0.3s
  padding 10px 20px 20px
  outline 1px solid #dee2e6

  &__header
    text-align center
    font-weight bold

  &.open
    bottom 0
    border-radius 20px 20px 0 0

.button-modal-close
  background-color #333
  width max-content
  color white
  padding 5px 10px
  border-radius 4px
  margin-left auto
  margin-top 10px
  cursor pointer
  transition 0.3s

  &:hover
    background-color rgba(51, 51, 51, 50%)

.modal-settings-block
  width 100%
  margin-top 10px
  display flex
  flex-direction column
  gap 20px

  &__line
    display flex
    gap 15px

  &__title
    color #65676d
    min-width max-content

  &__input
    width 100%
    padding 0 5px
    border unset

    &.disabled
      color #65676d

    &:focus
      outline 1px solid gray

  textarea
    outline 1px solid #333
    resize none

.button-create-task
  height 50px
  border none
  cursor pointer
  transition 0.3s

  &:hover
    opacity 0.65